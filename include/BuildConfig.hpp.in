#ifndef BUILD_CONFIG_HPP
#define BUILD_CONFIG_HPP

#define BUILD_PROJECT_NAME          @PROJECT_NAME@
#define BUILD_PROJECT_NAME_ENGINE   @PROJECT_NAME_ENGINE@
#define BUILD_PROJECT_VERSION       @PROJECT_VERSION@

#define BUILD_SYSTEM                @CMAKE_SYSTEM@
#define BUILD_SYSTEM_NAME           @CMAKE_SYSTEM_NAME@
#define BUILD_SYSTEM_VERSION        @CMAKE_SYSTEM_VERSION@
#define BUILD_HOST_SYSTEM_NAME      @CMAKE_HOST_SYSTEM_NAME@
#define BUILD_SYSTEM_PROCESSOR      @CMAKE_SYSTEM_PROCESSOR@

#define SDL2_PACKAGE_VERSION        @SDL2_VERSION@
