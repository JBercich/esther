#define SDL2_MIXER_PACKAGE_VERSION  @SDL2_mixer_VERSION@
#define SDL2_TTF_PACKAGE_VERSION    @SDL2_ttf_VERSION@
#define SPDLOG_PACKAGE_VERSION      @spdlog_VERSION@

#define BUILD_TYPE                  @CMAKE_BUILD_TYPE@
#define BUILD_TYPE_DEBUG            @CMAKE_BUILD_TYPE_DEBUG@
#define BUILD_TYPE_RELEASE          @CMAKE_BUILD_TYPE_RELEASE@
#define BUILD_TYPE_MINSIZEREL       @CMAKE_BUILD_TYPE_MINSIZEREL@
#define BUILD_TYPE_RELWITHDEBINFO   @CMAKE_BUILD_TYPE_RELWITHDEBINFO@

#endif

